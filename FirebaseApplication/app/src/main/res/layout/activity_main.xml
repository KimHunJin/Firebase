<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dxmnd.com.firebaseapplication.MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/btn_sign_in_google"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/round_button_google"
            android:text="SIGN IN WITH GOOGLE" />

        <Button
            android:id="@+id/btn_sign_in_github"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/btn_sign_in_google"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_button_github"
            android:text="SIGN IN WITH GITHUB" />
    </RelativeLayout>

</RelativeLayout>
